{
  "name": "hashtune-server",
  "version": "1.0.0",
  "description": "Hashtune's marketplace server architecture",
  "main": "index.js",
  "repository": "https://github.com/hashtune",
  "author": "Hashtune",
  "license": "",
  "scripts": {
    "dev": "dotenv -e ./.env.local -- ts-node-dev --no-notify --respawn --transpile-only graphql/server.ts",
    "build": "tsc -p tsconfig.prod.json",
    "seed": "dotenv -e ./.env.local -- ts-node-dev --no-notify --respawn --transpile-only utils/seed.ts",
    "test:unit": "jest unit",
    "test:api": "dotenv -e ./.env.local jest --runInBand",
    "test:watch": "dotenv -e ./.env.local jest --watch",
    "test:environment:docker": "yarn docker:up && yarn docker:test:run & yarn docker:down",
    "lint:fix": "eslint --fix .",
    "prisma:migrate": "dotenv -e .env.local prisma migrate dev",
    "prisma:generate": "dotenv -e .env.local prisma generate",
    "reflect:nexus:watch": "nodemon --exec 'yarn ts-node graphql/schema' --ext 'ts' --watch '*/graphql/**/*.ts' --ignore 'graphql/generated/schema.graphql'",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@genql/cli": "2.6.0",
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-mock-extended": "^1.0.18",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "prisma": "^2.30.3",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@genql/runtime": "2.6.0",
    "@nexus/schema": "^0.20.1",
    "@prisma/client": "^2.27.0",
    "apollo-graphql": "^0.9.3",
    "apollo-server": "^3.0.2",
    "apollo-server-express": "^3.3.0",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "graphql": "^15.5.3",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.34.0",
    "yarn": "^1.22.11"
  }
}
