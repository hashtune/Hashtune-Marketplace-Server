{
  "name": "hashtune-server",
  "version": "1.0.0",
  "description": "Hashtune's marketplace server architecture",
  "main": "index.js",
  "repository": "https://github.com/hashtune",
  "author": "Hashtune",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "dotenv -e ./.env.local -- ts-node-dev --no-notify --respawn --transpile-only graphql/server.ts",
    "cron": "dotenv -e ./.env.local -- ts-node scripts/cron.ts",
    "build": "tsc -p tsconfig.prod.json",
    "start": "dotenv -e ./.env -- node dist/graphql/server.js",
    "testchain": "ts-node singletons/chain.ts",
    "test:unit": "dotenv -e .env.test jest unit",
    "test:watch": "dotenv -e .env.test jest --watch",
    "test:api": "dotenv -e .env.test -- jest --config ./jest.config.ts --runInBand --force-exit",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "data:seed": "dotenv -e .env.test ts-node ./utils/executeSeed",
    "data:reset": "dotenv -e .env.test ts-node ./utils/executeReset",
    "prisma:migrate": "dotenv -e .env.local prisma migrate dev",
    "prisma:deploy": "dotenv -e .env.local prisma migrate deploy",
    "production:prisma:deploy": "dotenv -e .env prisma migrate deploy",
    "ci:prisma:migrate": "prisma migrate dev",
    "ci:prisma:generate": "prisma generate",
    "prisma:generate": "dotenv -e .env.local prisma generate",
    "production:prisma:generate": "dotenv -e .env prisma generate",
    "prisma:studio": "dotenv -e .env.local prisma studio",
    "nexus:watch": "nodemon --exec 'yarn ts-node graphql/schema' --ext 'ts' --watch '*/graphql/**/*.ts' --ignore 'graphql/generated/schema.graphql'",
    "test:environment:docker": "yarn docker:up && yarn docker:test:run & yarn docker:down",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@genql/cli": "2.6.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@types/cors": "^2.8.12",
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "ethers": "^5.5.1",
    "jest": "^27.0.6",
    "jest-mock-extended": "^1.0.18",
    "nodemon": "^2.0.12",
    "prettier": "^2.6.2",
    "prisma": "2.29.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@genql/runtime": "2.6.0",
    "@nexus/schema": "^0.20.1",
    "@prisma/client": "2.29.0",
    "@types/helmet": "^4.0.0",
    "apollo-graphql": "^0.9.3",
    "apollo-server": "^3.0.2",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.3.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "eth-sig-util": "^3.0.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-validation-complexity": "^0.4.2",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^9.0.0",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.34.0",
    "node-cron": "^3.0.0",
    "yarn": "^1.22.11"
  }
}